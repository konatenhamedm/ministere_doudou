{% extends 'security/layout.html.twig' %}

{% block title %}Demande d'inscription !{% endblock %}

{% block body %}



{{ form_start(form, {attr: {'class': 'form w-100'}, id: "kt_sign_in_form"}) }}
	<div class="text-center mb-11">
         <a href="#" class="mb-0 mb-lg-12">
                {% if menu.findParametre | length > 0 %}
                    <img alt="Logo"
                         src="{{ asset('uploads/' ~ menu.findParametre.logoLogin.path ~'/'~ menu.findParametre.logoLogin.alt) }}"
                         class="h-60px h-lg-75px"/>
                {% else %}
                    <img alt="Logo" src="{{ asset('assets/media/logos/logo_tt.png') }}" class="h-60px h-lg-75px"/>
                {% endif %}
            </a>
		<h1 class="text-dark fw-bolder mb-3">Demande d'inscription</h1>
		<div class="text-gray-500 fw-semibold fs-6">IMMO-PLUS</div>
	</div>
	{% include "_partial/_flash.html.twig" %}
	
	<!--end::Separator-->
	<!--begin::Input group=-->
	{{ include('_includes/ajax/response.html.twig') }}
	<div class="alert alert-primary d-flex align-items-center p-5 mb-10">
		<!--begin::Svg Icon | path: icons/duotune/Config/gen048.svg-->
	
		<!--end::Svg Icon-->
		<div class="alert-text">
			Si vous avez déjà un compte, veuillez vous connecter <b>[<a href="{{path('app_login') }}">ICI</a>]</b> pour continuer à gérer votre espace											
		</div>
		<!--begin::Close-->
		<button type="button" class="position-absolute position-sm-relative m-2 m-sm-0 top-0 end-0 btn btn-icon ms-sm-auto" data-bs-dismiss="alert">
			<span class="svg-icon svg-icon-2x svg-icon-light">...</span>
		</button>
		<!--end::Close-->
	</div>
	<div class="row">
		
		<div class="col-md-6">
			<div class="fv-row mb-3">
				{{ form_row(form.denomination, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
			</div>
		</div>
		<div class="col-md-6">
			<div class="fv-row mb-3">
				{{ form_row(form.siteWeb, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
			</div>
		</div>
	</div>
	<div class="row">
		
		<div class="col-md-12">
			<div class="fv-row mb-3">
				{{ form_row(form.email, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<div class="fv-row mb-3">
				{{ form_row(form.contact, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
			</div>
		</div>
		<div class="col-md-6">
			<div class="fv-row mb-3">
				{{ form_row(form.adresse, {attr: {class: 'form-control form-control-sm bg-transparent'}}) }}
			</div>
		</div>
	</div>

	
	

	
	<!--end::Wrapper-->
	<!--begin::Submit button-->
	<div class="d-grid mb-10">
		<button type="submit" class="btn btn-main btn-ajax">
			<span class="spinner-border d-none  spinner-ajax spinner-border-sm" role="status" aria-hidden="true"></span>
			Valider
			<!--end::Indicator progress-->
		</button>
	</div>
	

	<!--end::Sign up-->
	{{ form_widget(form._token) }}
	{{ form_end(form, {render_rest: false}) }}
{% endblock %}