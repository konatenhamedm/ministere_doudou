        href="{{ asset('uploads/media_entreprise/' ~ colonne.vars.value.facture.alt) }} " download> <i
            class="bi bi-upload"></i>
    </a>
    {% endif %}
</td>
<td class="p-2">
    <div style="display:no " class="field-matiere">{{ form_row(colonne.recu) }}</div>
</td>
<td class="p-2">
    {% if value and value.recu %}
    <a class="btn btn-dark btn-sm" target="_blank"
        href="{{ asset('uploads/media_entreprise/' ~ colonne.vars.value.recu.alt) }} " download> <i
            class="bi bi-upload"></i>
    </a>
    {% endif %}
</td>
<td class="p-2  ">{{ form_row(colonne.decharge) }} </td>
<td class="p-2  "> {% if value and value.decharge %}

    <a class="btn btn-dark btn-sm" target="_blank"
        href="{{ asset('uploads/media_entreprise/' ~ colonne.vars.value.decharge.alt) }} " download> <i
            class="bi bi-upload"></i>
    </a>
    {% endif %}
</td>
  
    <td class="p-2 del-col " data-parent=".row-colonne"></td>
</tr>


