
{% macro ligne_impution(colonne) %}
    <tr class="row-colonne even pointer table-light">
        <td width="40%" class="p-2">
        
            <div style="display:no " class="field-matiere">{{ form_widget(colonne.employe) }}</div>
        </td>
        <td  width="40%" class="p-2">
          
            <div style="display:no " class="field-matiere">{{ form_widget(colonne.commentaire) }}</div>
        </td>

        
    
        <td  width="10%"class="p-2 del-col " data-parent=".row-colonne">{# <a href="#" class="btn btn-danger btn-xs"><span class="bi bi-trash"></span></a> #}</td>
    </tr>
{% endmacro  %}


{% macro prototype_ligne_impution(form) %}
    <div class="list-colonne"  data-prototype="{{ _self.ligne_impution(form.imputations.vars.prototype)|e }}"></div>

      <br>
    <table class="table table-bordered table-custom">
        <thead class="thead-dark">
            <tr width="100%" style="border: 0px !important;">
                <th colspan="3" class="p-2 text-center text-bold text-uppercase">Liste des imputations </th>
            </tr>
            <tr>
                <th width="40%" class="p-2">Employer</th>
                <th width="40%" class="p-2">Commentaire</th>
                {# <th width="5%" class="p-2"></th> #}
               
                <th width="10%">
                    <button type="button" data-protoname="__name__" class="btn btn-default add_line btn-xs" id="add_ligne"
                        data-protoclass=".list-colonne" data-container=".column-container">
                        <i class="fa fa-plus"></i> Ajouter 
                    </button>
                </th>
            </tr>
        </thead>
        <tbody  class="column-container proto-container" data-childclass=""">
            {% for item in form.imputations %}
                {{ _self.ligne_impution(item|e) }}
            {% endfor %}
        </tbody>
    </table>
{% endmacro %}